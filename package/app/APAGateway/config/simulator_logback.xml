<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true">

    <property name="LOG_HOME" value="/var/log/APAGateway" />
    <!--property name="LOG_HOME" value="C:/Workspaces/APAGateway/logs" /-->

    <appender name="FILEAPPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/simulator.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %-7d{yyyy-MM-dd HH:mm:ss:SSS} [%p] [%t] %c.%M:%L %m%n
            </Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_HOME}/archived/simulator.%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>

    </appender>

    <logger name="com.thomsonreuters" level="trace"	additivity="false">
        <appender-ref ref="FILEAPPENDER" />
    </logger>

    <root level="trace">
        <appender-ref ref="FILEAPPENDER" />
    </root>

</configuration>